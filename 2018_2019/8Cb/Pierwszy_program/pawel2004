print('Program do dzielenia.')
dzielna = float(input("Wprowadz dzielnÄ…: "))
dzielnik = float(input("Wprowadz dzielnik: "))

while 1:
    if dzielnik != 0:
        wynik = dzielna % dzielnik
        calosc = dzielna - wynik
        print('Wynik to ', calosc, 'calosci i', wynik, 'reszty.')
        break
    elif dzielnik == 0:
        dzielnik = float(input("Wprowadz dzielnik: "))

